@model List<Category>
@{
    ViewData["Title"] = "Categories";
}

<h1>كل الاصناف  </h1>
<div>
    <a class="btn btn-primary" asp-action="Create">اضافة صنف </a>
</div>
<hr />
@if (Model.Any())
{
        <table class="table">
          <thead>
            <tr>
              <th scope="col">#</th>
              <th scope="col">الاسم</th>
              <th scope="col">التفاصيل</th>
              <th scope="col">العمليات</th>
            </tr>
          </thead>
          <tbody>
            @for(int j=1,i = 0; i < Model.Count; ++i,++j)
            {
        
            <tr>
                <th scope="row">@j</th>
                <td>@Model[i].Name</td>
                <td>@Model[i].Description</td>
                <td>
                     <a onclick="return confirm('R U sure' )"
                                                class="btn btn-danger" 
                                                asp-action="Delete" asp-route-id="@Model[i].CategoryId">
                                                حذف
                                            </a> 
                    <a class="btn btn-primary" asp-route-id="@Model[i].CategoryId" asp-action="Edite">تعديل</a> 
                    <a class="btn btn-primary" asp-route-id="@Model[i].CategoryId">عرض المنتجات</a> 
                </td>
            </tr>
            
         
            }
         </tbody>
        </table>
}
else{
    <h2 class="text text-secondary">لا يوجد اصناف حتى الان </h2>
}

