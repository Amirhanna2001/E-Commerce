@model CreateProductViewModel
@{
    ViewData["Title"] = "Details";
}
<h2>Add Product</h2>
<hr />

<section class="row justify-content-between">
    <div class="col-md-4" >
        <form method="post" enctype="multipart/form-data" asp-controller="Product" asp-action="Index">
            <input type="hidden" asp-for="ProductId" disabled />
            <input type="hidden"  />
            <div class="form-group">
                <label  asp-for="Name"></label>
                <input asp-for="Name" maxlength="250"  type="text" class="form-control" disabled/>
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  asp-for="Brand"></label>
                <input asp-for="Brand"  type="text" class="form-control" disabled/>
                <span asp-validation-for="Brand" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  asp-for="Price"></label>
                 <input asp-for="Price" class="form-control"disabled >

                <span asp-validation-for="Price" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  asp-for="Quantity"></label>
                 <input asp-for="Quantity" class="form-control"disabled >

                <span asp-validation-for="Quantity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  asp-for="CategoryId">Category Name</label>
                 <select class="form-control" asp-for="CategoryId" 
                        asp-items="@(new SelectList(Model.Categories,"CategoryId","Name"))">
                        <option></option>
                    </select>
                        
                <span asp-validation-for="CategoryId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label  asp-for="Description"></label>
                 <textarea asp-for="Description" class="form-control" maxlength="2500" rows="5">

                 </textarea>
                <span asp-validation-for="Description" class="text-danger"></span>
            </div>
            
           <div class="custom-file">
                <input type="file" class="form-control" asp-for="Image" disabled/>
                <label class="form-control" asp-for="Image"></label>
                <span asp-validation-for="Image" class="text-danger"></span>
            </div>
            <div class="mt-2">
                <button type="submit" class="btn btn-primary">
                    Back</button>
               
            </div>

        </form>
    </div>
    

</section>
@section Scripts {
    @{ await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
    
}